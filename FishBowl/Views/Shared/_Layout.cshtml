<!DOCTYPE html>
<html class="no-js" lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="CACHE-CONTROL" content="NO-CACHE" />
    <meta http-equiv="Expires" content="-1" />
    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/libs")
    
    <script type="text/javascript" src="~/Scripts/Custom/FishBowlSvc.js"></script>
    <script type="text/javascript" src="~/Scripts/Custom/FishBowlCtrl.js"></script>
    <style type="text/css">

        div.fishBowl {
            border: solid;
            border-width: thin;
            padding: 4px 4px 4px 4px;
        }
        
        div.fish
        {
            border: solid;
            border-width: thin;
            padding: 4px 4px 4px 4px;
            margin: 4px 4px 4px 4px;
            min-height: 50px;
            text-align: center;
            vertical-align: middle;
        }

            div.fish img
            {
                width: 40px;
            }

            div.chair img
            {
                height: 40px;
            }


        div.col-xs-1 img
        {
            height: 25px;
        }

        div.container
        {
            padding-top: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        @RenderBody()
    </div>
</body>
</html>
